generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model waitlist {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  role          String
  otherRole     String?
  whatsapp      String?
  instagram     String?
  reason        String
  interests     String[]
  otherInterest String?
  referralCode  String   @unique
  referredBy    String? // referralCode of inviter
  referralCount Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model foundingMember {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  github     String?
  linkedin   String?
  portfolio  String?
  skills     String
  experience String
  motivation String
  commitment String
  ideas      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
